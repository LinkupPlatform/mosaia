{
    "name": "Linkup Search",
    "description": "Real-time web search powered by Linkup API. Search the web with standard or deep modes, filter by domains and dates, get structured outputs, and include images in results.",
    "schema": {
      "type": "function",
      "function": {
        "name": "linkup_search",
        "description": "Search the web in real time using Linkup. Use this tool whenever you need trusted facts, news, or source-backed information. Returns comprehensive content from the most relevant sources with advanced filtering options.",
        "parameters": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Natural language search query. Full questions work best, e.g., 'How does the new EU AI Act affect startups?'"
            },
            "depth": {
              "type": "string",
              "enum": ["standard", "deep"],
              "description": "The search depth to perform. Use 'standard' for queries with likely direct answers (faster). Use 'deep' for complex queries requiring comprehensive analysis or multi-hop questions (slower but more thorough).",
              "default": "standard"
            },
            "outputType": {
              "type": "string",
              "enum": ["searchResults", "sourcedAnswer", "structured"],
              "description": "The type of output to return: 'searchResults' for raw sources and snippets, 'sourcedAnswer' for a natural language answer with sources, 'structured' for custom JSON format (requires structuredOutputSchema).",
              "default": "sourcedAnswer"
            },
            "structuredOutputSchema": {
              "type": "string",
              "description": "JSON schema string defining the structure of the response. Only used when outputType is 'structured'. Example: '{\"type\":\"object\",\"properties\":{\"revenue\":{\"type\":\"number\"}}}'."
            },
            "includeImages": {
              "type": "boolean",
              "description": "Whether to include relevant images in the search results. Useful for visual content or research requiring images.",
              "default": false
            },
            "fromDate": {
              "type": "string",
              "description": "Filter results to only include content from this date onwards. Format: YYYY-MM-DD (e.g., '2024-01-01')."
            },
            "toDate": {
              "type": "string",
              "description": "Filter results to only include content up to this date. Format: YYYY-MM-DD (e.g., '2024-12-31')."
            },
            "includeDomains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of domains to exclusively search within. Only results from these domains will be returned. Example: ['microsoft.com', 'apple.com']."
            },
            "excludeDomains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Array of domains to exclude from search results. Results from these domains will not be returned. Example: ['wikipedia.org', 'reddit.com']."
            }
          },
          "required": ["query"]
        }
      }
    },
    "envVars": ["LINKUP_API_KEY"]
  }